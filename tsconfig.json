{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "moduleResolution": "node",
        "types": ["node"],
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        // "jsx": "react",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "lib": ["ES2021"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
